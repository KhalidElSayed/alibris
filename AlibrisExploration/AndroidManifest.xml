<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.josephblough.alibris"
      android:versionCode="2"
      android:versionName="1.1">
    <uses-sdk android:minSdkVersion="5" />

    <supports-screens android:smallScreens="true" 
                      android:normalScreens="true" 
                      android:largeScreens="true" 
                      android:anyDensity="true" />
                      
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name=".ApplicationController">
        <activity android:name=".activities.MainActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.WorkDetailActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light" />

        <activity android:name=".activities.WorkReviewsActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light" />

        <activity android:name=".activities.WorkOffersActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light" />

        <activity android:name=".activities.WorkOfferDetailActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light" />

        <activity android:name=".activities.ShoppingCartActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light" />

    </application>

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest>