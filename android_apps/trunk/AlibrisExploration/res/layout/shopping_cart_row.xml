<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">

  <ImageView android:id="@+id/shopping_cart_item_image"
    android:layout_margin="6dip"
    android:layout_width="50dip"
    android:layout_height="75dip"
    android:focusable="false"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true" />
    
  <TextView android:id="@+id/shopping_cart_item_price"
    android:text="$0.00"
    android:focusable="false"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    style="@style/OfferPriceLabel" />
  
  <ImageView android:id="@+id/shopping_cart_item_remove"
    android:src="@drawable/stop32"
    android:focusable="false"
    android:layout_below="@id/shopping_cart_item_price"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    style="@style/OfferPriceLabel" />
    
  <TextView android:id="@+id/shopping_cart_item_title"
    android:text="Title"
    android:focusable="false"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@id/shopping_cart_item_price"
    android:layout_toRightOf="@id/shopping_cart_item_image"
    style="@style/OfferSellerLabel" />

  <TextView android:id="@+id/shopping_cart_item_author"
    android:text="Author"
    android:focusable="false"
    android:layout_below="@id/shopping_cart_item_title"
    android:layout_toLeftOf="@id/shopping_cart_item_price"
    android:layout_toRightOf="@id/shopping_cart_item_image"
    style="@style/OfferBindingLabel" />

</RelativeLayout>
